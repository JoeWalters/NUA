# NUA Application Environment Configuration
# Copy this to .env and modify values as needed

# Server Configuration
NODE_ENV=production
PORT=4323
LOG_LEVEL=INFO

# UniFi Connection Configuration
UNIFI_RETRY_ATTEMPTS=5
UNIFI_RETRY_DELAY=5000

# Database Configuration
DB_POOL_SIZE=10

# Health Check Configuration  
HEALTH_CHECK_INTERVAL=30000

# Security Settings
# MAX_REQUEST_SIZE=10mb (handled in code)
# CORS_ORIGIN=* (handled in code)

# Performance Settings
REQUEST_TIMEOUT=30000
SHUTDOWN_TIMEOUT=10000

# Development Settings (only used when NODE_ENV=development)
DEBUG_ROUTES=false
DETAILED_ERROR_RESPONSES=false